<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="brainbits.blocking.filesystem_storage" class="Brainbits\Blocking\Storage\FilesystemStorage">
            <argument>%kernel.cache_dir%/blocks/</argument>
        </service>

        <service id="brainbits.blocking.session_owner" class="Brainbits\Blocking\Owner\SymfonySessionOwner">
            <argument type="service" id="session" />
        </service>

        <service id="brainbits.blocking.expired_validator" class="Brainbits\Blocking\Validator\ExpiredValidator">
            <argument>%brainbits.blocking.validator.expiration_time%</argument>
        </service>

        <service id="brainbits.blocking.blocker" class="Brainbits\Blocking\Blocker">
            <argument type="service" id="brainbits.blocking.filesystem_storage" />
            <argument type="service" id="brainbits.blocking.session_owner" />
            <argument type="service" id="brainbits.blocking.expired_validator" />
        </service>

        <service id="brainbits.blocking.controller" class="Brainbits\BlockingBundle\Controller\BlockingController">
            <argument type="service" id="brainbits.blocking.blocker" />
        </service>

    </services>

</container>
