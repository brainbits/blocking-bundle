<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="brainbits.blocking.adapter.classname">Brainbits\Blocking\Adapter\FilesystemAdapter</parameter>
        <parameter key="brainbits.blocking.owner.classname">Brainbits\Blocking\Owner\SessionOwner</parameter>
        <parameter key="brainbits.blocking.validator.classname">Brainbits\Blocking\Validator\ExpiredValidator</parameter>
        <parameter key="brainbits.blocking.validator.expiration_time">300</parameter>
        <parameter key="brainbits.blocking.interval">30</parameter>
    </parameters>

    <services>

        <service id="brainbits.blocking.adapter" class="%brainbits.blocking.adapter.classname%">
            <argument>%kernel.cache_dir%/blocks/</argument>
        </service>

        <service id="brainbits.blocking.owner" class="%brainbits.blocking.owner.classname%">
            <argument type="service" id="session" />
        </service>

        <service id="brainbits.blocking.validator" class="%brainbits.blocking.validator.classname%">
            <argument>%brainbits.blocking.validator.expiration_time%</argument>
        </service>

        <service id="brainbits.blocking.blocker" class="Brainbits\Blocking\Blocker">
            <argument type="service" id="brainbits.blocking.adapter" />
            <argument type="service" id="brainbits.blocking.owner" />
            <argument type="service" id="brainbits.blocking.validator" />
        </service>

        <service id="brainbits.blocking.controller" class="Brainbits\Blocking\Controller\BlockingController">
            <argument type="service" id="brainbits.blocking.blocker" />
        </service>

    </services>

</container>
