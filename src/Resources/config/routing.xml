<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="brainbits_blocking_block" path="/blocking/block/{type}/{id}">
        <default key="_controller">brainbits.blocking.controller:blockAction</default>
    </route>

    <route id="brainbits_blocking_unblock" path="/blocking/unblock/{type}/{id}">
        <default key="_controller">brainbits.blocking.controller:unblockAction</default>
    </route>

</routes>
